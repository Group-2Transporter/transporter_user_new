<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardCornerRadius="10dp"
        android:elevation="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        card_view:cardElevation="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv">

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/tv_Name"
                    style="@style/comfirm_load_textView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17dp"
                    android:text="Transporert Name : "
                    />
                <TextView
                    android:id="@+id/tvTransporterName"
                    style="@style/comfirm_load_textView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="shadab khan"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llLocation"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/llMaterialType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llLocation"
                    android:layout_marginLeft="17dp">

                    <TextView
                        style="@style/comfirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="Rate : " />

                    <TextView
                        android:id="@+id/tvRate"
                        style="@style/comfirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="10000" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llName"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/li_date">

                    <TextView
                        style="@style/comfirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="Date : "
                        />

                    <TextView
                        android:id="@+id/tvLastDate"
                        style="@style/comfirm_load_textView"
                        android:layout_width="wrap_content"
                        android:text="100000" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_below="@id/lll"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=" More Detail "
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/moreButton"
                android:background="#edeaea"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>