<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        card_view:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:elevation="10dp"
            >

            <LinearLayout
                android:id="@+id/li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:weightSum="1"

                >

                <LinearLayout
                    android:id="@+id/llLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/tvAddress"
                        style="@style/comfirm_load_textView"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:text="Source to Destination Add : "
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llLocation"
                    android:orientation="vertical"
                    android:layout_marginLeft="35dp">

                    <LinearLayout
                        android:id="@+id/llMaterialType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llLocation"
                       >

                        <TextView
                            style="@style/comfirm_load_textView"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Material : " />

                        <TextView
                            android:id="@+id/tvTypeOfaterial"
                            style="@style/comfirm_load_textView"
                            android:layout_width="wrap_content"
                            android:text="Steel" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llName"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            style="@style/comfirm_load_textView"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Last date : " />

                        <TextView
                            android:id="@+id/tvLastDate"
                            style="@style/comfirm_load_textView"
                            android:layout_width="wrap_content"
                            android:text="3/12/2020" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/ivMoreVert"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/more_vert"
                android:layout_alignParentEnd="true"


            />
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/count"
                android:id="@+id/counter"
                android:layout_marginRight="2dp"
                android:layout_below="@id/ivMoreVert">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="10dp"
                    android:id="@+id/tvCount"
                    android:layout_margin="10dp"

                    />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>