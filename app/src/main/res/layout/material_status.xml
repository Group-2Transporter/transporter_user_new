<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/boder_comfirm_load"
    android:padding="10dp">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="15dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAddress"
                style="@style/comfirm_load_textView"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="MATERIAL STATUS"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ivCancel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-5dp"
                android:text="X"
                android:textSize="30sp"
                android:background="#eb150A"
                android:textColor="@color/white"
                android:gravity="center"
           />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl1"
            android:layout_margin="20dp"
            android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvLoaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loaded"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/cLoaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/blank_check_box" />

                    <ImageView
                        android:id="@+id/checkLoaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/cheked_box"
                        android:visibility="gone" />
                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tvTransit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Transit"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/cTransit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/blank_check_box" />

                <ImageView
                    android:id="@+id/checkedTransit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/cheked_box"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tvReached"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reached"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/cReached"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/blank_check_box" />

                    <ImageView
                        android:id="@+id/checkedReached"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/cheked_box"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tvUnloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unloaded"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/cUnloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/blank_check_box" />

                    <ImageView
                        android:id="@+id/checkedUnloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/cheked_box"
                        android:visibility="gone" />
                </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>